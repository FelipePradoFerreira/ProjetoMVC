@model Frekisa.Models.Funcionarios

@{
    ViewBag.Title = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><b>Excluir</b></h2>

<h3>Tem certeza que deseja excluir esse funcionario?</h3>

@if (ViewBag.erroDelete != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <strong>Não foi possivel excluir o funcionario - </strong> @ViewBag.erroDelete
    </div>
}

<div class="jumbotron">
    <h4>Funcionarios</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nome_funcionario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome_funcionario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cpf_funcionario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpf_funcionario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.login)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.login)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.senha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.senha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.is_gerente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.is_gerente)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger col-md-3" />
            <a class="btn btn-primary" role="button" href="@Url.Action("Index")">Voltar</a>
        </div>
    }
</div>
